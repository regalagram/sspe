    color: white;
    font-size: 16px !important;
    font-weight: bold;
    line-height: 1;
    text-shadow: 0 0 2px rgba(0,0,0,0.5); /* Para mejor visibilidad */
  }
  
  /* Estado hover/focus para checkboxes móviles */
  .accordion-sidebar input[type="checkbox"][data-mobile-enhanced]:hover,
  .accordion-panel-content input[type="checkbox"][data-mobile-enhanced]:hover {
    border-color: #005299;
    box-shadow: 0 2px 6px rgba(33, 150, 243, 0.2);
    background: #f8f9ff;
  }
  
  .accordion-sidebar input[type="checkbox"][data-mobile-enhanced]:focus,
  .accordion-panel-content input[type="checkbox"][data-mobile-enhanced]:focus {
    outline: none;
    border-color: #005299;
    box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.3);
  }
  
  /* Labels mejorados para checkboxes móviles */
  .accordion-sidebar label[data-mobile-label-enhanced],
  .accordion-panel-content label[data-mobile-label-enhanced] {
    /* Asegurar area táctil adecuada */
    min-height: 44px !important;
    padding: 8px 4px !important;
    cursor: pointer !important;
    
    /* Prevenir selección de texto */
    user-select: none !important;
    -webkit-user-select: none !important;
    -moz-user-select: none !important;
    -ms-user-select: none !important;
    
    /* Layout mejorado */
    display: flex !important;
    align-items: center !important;
    gap: 8px;
    
    /* Feedback visual en tap */
