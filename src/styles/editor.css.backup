  }
  
  /* Feedback táctil para labels de checkboxes */
  .accordion-sidebar label[data-mobile-label-enhanced]:active,
  .accordion-panel-content label[data-mobile-label-enhanced]:active {
    background-color: rgba(33, 150, 243, 0.1) !important;
    border-radius: 6px;
  }
